<h1>Edit Post</h1>

<%= form_tag(post_path(@post), method: :put) do %>
    <div class="post-field">
      <%= label_tag "Title: " %>
      <%= text_field_tag :title, @post.title %>
    </div>

    <div class="post-field">
      <%= label_tag "Body: " %>
      <%= text_area_tag :content, @post.content %>
    </div>

    <%= submit_tag "Publish!" %>
<% end %>

<%= link_to "Back", :back %>
